{
  "name": "@cryptoadong/spayment-js",
  "version": "0.0.1",
  "description": "Send and receive stealth payments",
  "author": "Crypto Adong <cryptoadong@gmail.com>",
  "private": false,
  "main": "build/src/index.js",
  "types": "build/src/index.d.ts",
  "files": [
    "build"
  ],
  "scripts": {
    "test": "yarn build",
    "build-pack": "tsc --build && yarn lerna run --ignore \"@spayment/spayment-js\" build",
    "coverage": "yarn clean && yarn build && nyc yarn hardhat test && sed -i'.bak' 's/SF:/SF:spayment-js\\//gI' coverage/lcov.info",
    "lint": "eslint --ext .js,.ts ",
    "prettier": "prettier --write .",
    "watch": "tsc --watch",
    "build": "tsc --build",
    "clean": "rimraf build coverage .nyc_output cache",
    "prepare": "yarn build",
    "prepublishOnly": "yarn lint && yarn test",
    "precommit": "lint-staged",
    "docs": "typedoc src/"
  },
  "license": "ISC",
  "dependencies": {
    "@unstoppabledomains/resolution": "8.3.1",
    "ethers": "^5.7.2",
    "hardhat": "^2.12.3",
    "noble-secp256k1": "^1.2.5"
  },
  "devDependencies": {
    "@ethersproject/abstract-signer": "^5.5.0",
    "@ethersproject/bignumber": "^5.5.0",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@types/bn.js": "^5.1.0",
    "@cryptoadong/spayment-contracts-core": "^0.0.1",
    "@types/chai": "^4.2.16",
    "@types/mocha": "^8.2.2",
    "chai": "^4.3.4",
    "dotenv": "^8.2.0",
    "eslint": "^7.12.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-chai-friendly": "^0.6.0",
    "eslint-plugin-import": "^2.20.2",
    "husky": "^4.3.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.1",
    "mocha": "^8.3.2",
    "nyc": "^15.1.0",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.0"
  },
  "resolutions": {
    "y18n": "^4.0.1"
  },
  "keywords": [
    "ethereum",
    "privacy",
    "payments",
    "web3"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lerna run precommit"
    }
