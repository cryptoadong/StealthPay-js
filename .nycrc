{
  "cache": false,
  "check-coverage": false,
  "extension": [".ts"],
  "include": ["**/*.js", "**/*.ts"],
  "exclude": [
    "node_modules/**",
    "**/*.d.ts",
    "**/*.test.ts",
    "src/index.ts",
    ".eslintrc.js",
    ".lintstagedrc.js",
    ".prettierrc.js",
    "hardhat.config.ts"
  ],
  "sourceMap": true,
  "reporter": ["html", "text", "text-summary", "lcov"],
  "all": true,
  "instrument": true
}
